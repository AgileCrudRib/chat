<div class="flex flex-col space-y-4">
  <h1 class="text-2xl font-bold mb-4"><%= @room.name %></h1>
  
  <div class="mb-4 overflow-y-auto max-h-[50vh]">
    <% @messages.each do |message| %>
      <p>
        <b><%= @user_names[message.user_id] %></b>: <%= message.content %>
      </p>
    <% end %>
  </div>

  <%= form_with(url: messages_path, method: :post, local: true) do |form| %>
    <div>
      <%= form.text_field :content, 
          placeholder: "Message", 
          required: true, 
          class: "w-[20vw] p-1 mb-2 border-2 border-black rounded-md" %>
    </div>
    
    <div>
      <%= form.hidden_field :room_id, value: @room.id %>
    </div>
    
    <div>
      <%= form.submit "Send", 
          class: "w-[20vw] p-1 border-2 border-blue-600 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition cursor-pointer" %>
    </div>
  <% end %>
</div>
